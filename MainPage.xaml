<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Kuri.MainPage"
    Shell.NavBarIsVisible="False"
    NavigationPage.HasNavigationBar="False"
    BackgroundColor="Transparent">

    <Grid>
        <!-- Achtergrondafbeelding -->
        <Image Source="background.png" 
               Aspect="AspectFill" 
               Opacity="1" 
               IsOpaque="True"/>

        <!-- Hoofd-layout -->
        <StackLayout>
            <!-- Header-balk -->
            <Grid HeightRequest="120" ColumnDefinitions="Auto,Auto,*">
                <!-- Achtergrond header -->
                <Image Source="background_header.png" 
                       Aspect="AspectFill"
                       Grid.ColumnSpan="3"/>

                <!-- Round Kuri logo -->
                <Frame Grid.Column="0"
                       CornerRadius="35"
                       IsClippedToBounds="True"
                       HeightRequest="80"
                       WidthRequest="80"
                       Padding="0"
                       Margin="20,15,0,0"
                       VerticalOptions="Center"
                       HorizontalOptions="Start">
                    <Image Source="kuri.png"
                           Aspect="AspectFill"/>
                </Frame>

                <Label Text="Kuri" 
                       Grid.Column="1"
                       FontSize="50" 
                       HorizontalOptions="Start" 
                       VerticalOptions="Center" 
                       FontAttributes="Bold"
                       Margin="5,15,0,0"
                       TextColor="#9367CA"/>
            </Grid>

            <!-- Inhoud -->
            <ScrollView>
                <StackLayout Padding="20" Spacing="5">
                    <Label x:Name="GreetingLabel" 
                           FontSize="24"
                           HorizontalOptions="Start"/>

                    <Label Text="Select a activity" 
                           FontSize="18"
                           TextColor="#D0B3FF"
                           Margin="0,10,0,5"/>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </Grid>
</ContentPage>