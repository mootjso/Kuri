<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Kuri.MainPage"
    Shell.NavBarIsVisible="False"
    NavigationPage.HasNavigationBar="False"
    BackgroundColor="Transparent">

    <Grid>
        <!-- Achtergrondafbeelding -->
        <Image Source="background.png" 
               Aspect="AspectFill" 
               Opacity="1" 
               IsOpaque="True"/>

        <!-- Hoofd-layout -->
        <StackLayout>
            <!-- Header-balk -->
            <Grid HeightRequest="120" ColumnDefinitions="Auto,Auto,*">
                <!-- Achtergrond header -->
                <Image Source="background_header.png" 
                       Aspect="AspectFill"
                       Grid.ColumnSpan="3"/>

                <!-- Round Kuri logo -->
                <Frame Grid.Column="0"
                       CornerRadius="35"
                       IsClippedToBounds="True"
                       HeightRequest="80"
                       WidthRequest="80"
                       Padding="0"
                       Margin="20,15,0,0"
                       VerticalOptions="Center"
                       HorizontalOptions="Start"
                       BackgroundColor="Transparent">
                    <Image Source="kuri.png"
                           Aspect="AspectFill"/>
                </Frame>

                <Label Text="Kuri" 
                       Grid.Column="1"
                       FontSize="50" 
                       HorizontalOptions="Start" 
                       VerticalOptions="Center" 
                       FontAttributes="Bold"
                       Margin="5,15,0,0"
                       TextColor="#9367CA">
                    <Label.Shadow>
                        <Shadow Brush="Black"
                                Offset="2,2"
                                Radius="4"
                                Opacity="0.9" />    
                    </Label.Shadow>
                </Label>
            </Grid>

            <!-- Inhoud -->
            <ScrollView>
                <StackLayout Padding="20" Spacing="5">
                    <Label x:Name="GreetingLabel" 
                           FontSize="30"
                           FontAttributes="Bold"
                           HorizontalOptions="Start">
                        <Label.Shadow>
                            <Shadow Brush="Black"
                                    Offset="2,2"
                                    Radius="6"
                                    Opacity="0.5" />
                        </Label.Shadow>
                    </Label>


                <HorizontalStackLayout Spacing="10" Padding="-20,-10,0,0" VerticalOptions="Start">
                        <Frame Grid.Column="0"
                           CornerRadius="35"
                           IsClippedToBounds="True"
                           HeightRequest="40"
                           WidthRequest="40"
                           Padding="0"
                           Margin="20,15,0,0"
                           VerticalOptions="Center"
                           HorizontalOptions="Start"
                           BackgroundColor="Transparent">
                        <Image Source="discord.png"
                               Aspect="AspectFill"/>
                    </Frame>
                    
                    <Label Text="Select a guild" 
                           FontSize="24"
                           TextColor="#9367CA"
                           Margin="-4,18,0,5">
                        <Label.Shadow>
                            <Shadow Brush="Black"
                                    Offset="2,2"
                                    Radius="6"
                                    Opacity="0.5" />        
                        </Label.Shadow>
                    </Label>
                </HorizontalStackLayout>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </Grid>
</ContentPage>